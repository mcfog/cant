stylus = require \stylus
module.exports = class extends require \./module
    -> super ...
    pattern: [/(.+)\.css$/, '$1.styl']
    rpattern: ['(.+)\\.styl$', '$1.css']

    getStylus: ->
        stylus it.toString!
        .set \filename, @_path
        .set \compress, true

    handleData: !(data, cb)->
        s = @getStylus data

        (err, css)<-! s.render
        return cb err if err
        cb null, css